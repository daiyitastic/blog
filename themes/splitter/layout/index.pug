extends base

block site_body

  .box-content.index
    .items.article-spread

      each post in page.posts.toArray()
        .item
          .item-content
            .meta
              span.date #{date(post.date, "YYYY MM DD")}
              != post.location
            h3
              a(href=url_for(post.path))= post.title
            .excerpt
              if post.image
                - var asset = url_for(post.path) + post.image
                  a(href=url_for(post.path))
                    img(src=asset)
              if !post.hideSummary
                p.description 
                  != post.summary
              .categories
                ul
                  for category in post.categories.toArray()
                    li
                      a(href=url_for(category.path)) #{category.name}
           

